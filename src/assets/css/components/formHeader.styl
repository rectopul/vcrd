.formMailMobile
    width 100%
    height: 60px
    text-align: center
    background-color: #0359A4
    color #fff
    font-size: 20px
    display flex
    justify-content: center
    align-items: center
    position: relative

    &::after
        content ''
        display: block
        width 100%
        height: 4px
        position: absolute
        left 0
        bottom -2px
        background-color: #F1E933
    
    &__title
        width 100%
        height: 55px
        background-color #fff
        display flex
        flex-direction: column
        justify-content: center
        align-items: flex-start
        padding 0 20px

        span
            font-size: 14px
            font-weight: 500
            color #2D2D2D