@keyframes giro
  from 
    transform rotate(0deg)
  
  to
    transform rotate(360deg)
  

.loader
    position fixed
    width 100%
    height 100%
    left 0
    top 0
    background-color rgba(255,255,255,.7)
    z-index 9
    display flex
    justify-content center
    align-items center

    &.hidden
        display none

    &__conteny
        width 60px
        height 60px
        display flex
        justify-content center
        align-items center
        position relative

        &:before
            content ''
            margin-top -150px
            background-color transparent
            width 30px
            height 30px
            border-radius 40px
            border 2px solid transparent
            border-left 2px solid #009ee3
            border-top 2px solid #009ee3
            animation: giro 1s linear infinite

