.topbar_nav
    width 100%
    height: 64px;
    background-color: color-primary
    position relative

    @media screen and (max-width: 776px)
        height 84px

    &__container
        width 100%
        max-width: 1280px
        height 64px
        margin 0 auto
        display flex
        align-items center
        padding 0 24px

        @media screen and (max-width: 776px)
            flex-direction: column
            align-items: center
            height 84px

        .logo
            figure
                width 190px
                display block

        > div
            height: 100%
            display: flex
            align-items: center
            color #fff
            font-size: 12px
            font-weight: 600

    

    