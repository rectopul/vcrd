.form-top
    display flex
    align-items: center
    list-style: none
    font-size: 18px
    font-weight: 500
    border-bottom 1px solid #d5d0d0
    padding-bottom: 10px
    margin-bottom: 10px
    font-family: 'Open Sans',sans-serif

    @media screen and (max-width: 776px)
        width 100%
        font-size: 10px

        i:before
            font-size: 12px

    i:before
        font-size: 24px
    

    > li
        color color-text-op
        display flex
        align-items: center
        &.active
            font-weight: 700
            color color-text-gray