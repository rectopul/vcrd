.bootstrap-tagsinput
    border 1px solid #dee2e6
    width 100%
    height calc(1.5em + 1.25rem + 2px)
    padding 0 .35rem
    font-weight 400
    display flex
    align-items center
    font-size: .875rem


.getCVV
    cursor pointer

    &:hover
        background-color #666
        color #fff

.snip_Operator
    position: absolute
    left 5px
    bottom 3px
    background-color: #007bff !important
    color #fff
    font-size: 10px
    padding 2px 8px !important
    border 0
    border-radius: 4px
    display: flex
    justify-content: center
    align-items: center
    opacity .8

.productList
    > tr
        position: relative

    td[role="device"]
        button
            position: absolute
            appearance: none
            background-color: color-primary
            border-radius: 4px
            display flex
            justify-content: center
            padding 4px 15px 
            border 0
            color #fff
            right 24px
            bottom 2px
            font-size: 7px

.responseProperty,
.responseOwner,
.responseCard
    display none
    width 100%
    &.show
        display block
    & tr
        cursor pointer

.inputWrapper
    position relative
    & .responseCard
        position absolute
        left 5px
        top 100%
        z-index 9
.Child
    display none
    &.show
        display block

.spinner-border
    display: inline-block
    width: 2rem
    height: 2rem
    vertical-align: text-bottom
    border: .25em solid currentColor
    border-right-color: transparent
    border-radius: 50%
    animation: b .75s linear infinite

.sr-only
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0,0,0,0);
    white-space: nowrap;
    border: 0;

@keyframes spin 
    0% 
        transform: rotate(0deg); 
    100% 
        transform: rotate(360deg); 

body
    .OPeEQ

        @media screen and (min-width 768px)
            font-size: 17px !important
            font-weight: 600

    .await-page
        display: flex
        width: 100%
        height: 100%
        justify-content: center
        position relative

        .loader-bar
            border: 6px solid transparent; /* Light grey */
            border-top: 6px solid color-primary; /* Blue */
            border-left: 6px solid color-primary; /* Blue */
            border-radius: 50%;
            width: 80px;
            height: 80px;
            animation: spin .7s linear infinite;
            margin 120px auto
            

            
            

    .ebFNtT::after 
        content: "";
        border-color: rgb(41, 175, 70) transparent transparent;

.form-error
    .ktCUnx .styles__StyledInput-sc-vrdjm4-0:last-child, .ktCUnx .styles__Adornment-sc-vrdjm4-1:last-child
        border-right: 1px solid rgb(247, 62, 65)
        border-color rgb(247, 62, 65)

.form-error
    input[type=email],
    input[type=password]
    
        border-color: rgb(247, 62, 65) !important
        color rgb(247, 62, 65)
        font-size: 16px
        font-weight: 600

.text-error
    text-align: center
    display flex
    justify-content: center
    font-size 1rem
    font-weight 600

    color rgb(247, 62, 65)

.productList
    .blockstatus
        span
            
            display block
            padding 5px
            color #fff
            text-align: center
            margin 0 auto
            border-radius 4px

    .reconnect span
        background-color #ffc107

    .enter span
        background-color: #2dce89
    .updated span
        background-color: #17a2b8

    .finish
        background-color: #343a40

    .disconnected span
        background-color: #dc3545
    tr
        cursor: pointer

        &:hover
            background-color: #5e72e4
            color #fff

.avatar.rounded-circle
    overflow: hidden

.dataTables_filter
    & label
        font-size 0
        &::before
            content 'Pesquisar'
            font-size 16px

